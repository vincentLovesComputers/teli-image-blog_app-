<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white2"
    tools:context=".ui.fragments.AccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ProgressBar
            android:id="@+id/prof_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
           android:theme="@style/ProgressBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <!--        <ImageView-->
<!--            android:id="@+id/prof_intro"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="150dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:srcCompat="@drawable/main_welcome" />-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prof_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/fashion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/prof_progress_bar" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"

            app:layout_constraintTop_toBottomOf="@id/prof_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            style="@style/profCard"
            android:theme="@style/profCard"
            app:cardBackgroundColor="@color/lightPurple"
            >
          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:id="@+id/prof_user_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="#F44336"

                  android:textSize="22sp"
                  android:textStyle="bold"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  />

              <LinearLayout
                  android:id="@+id/date_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/prof_user_name"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  android:orientation="horizontal"
                  tools:ignore="UseCompoundDrawables">

                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:layout_gravity="bottom"
                      app:srcCompat="@drawable/ic_calendar" />

                  <TextView
                      android:id="@+id/prof_date_joined"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="13dp"
                      android:textSize="14sp"
                      android:layout_gravity="top"
                      android:textColor="@color/saveBtnEnabled"
                      android:layout_marginHorizontal="5dp"
                      android:gravity="start"

                      />

              </LinearLayout>




              <TextView
                  android:id="@+id/prof_bio"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/saveBtnEnabled"
                  android:layout_marginStart="5dp"
                  android:gravity="start"
                  android:layout_marginTop="7dp"
                  android:textSize="14sp"
                  app:layout_constraintTop_toBottomOf="@id/date_layout"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  tools:layout_editor_absoluteY="115dp" />

              <TextView
                  android:id="@+id/prof_interets"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/prof_bio"
                  android:textSize="16sp"
                  android:textStyle="italic"
                  android:text="Your interests :"
                  android:layout_marginTop="13dp"
                  android:textColor="#E3DFDF"
                  android:layout_marginStart="5dp"
                  />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/prof_recycler"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_marginTop="10dp"
                  app:layout_constraintEnd_toEndOf="@id/prof_interets"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toLeftOf="@id/prof_interets"
                  app:layout_constraintTop_toBottomOf="@id/prof_interets"
                  app:layout_constraintVertical_bias="0.175" />


          </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/edit_prof_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="@string/edit_btn"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/orange2"
            app:layout_constraintStart_toEndOf="@+id/prof_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
